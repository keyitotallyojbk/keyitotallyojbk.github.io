<header class="main-header">
  <div class="wrapper">
    <div class="header-flex">
      <div class="menu-icon-container">
        <span class="menu-icon"><i class="fa fa-bars" aria-hidden="true"></i></span>
      </div>
      <nav class="main-nav">
        <span class="menu-icon-close"><i class="fa fa-times" aria-hidden="true"></i></span>
        <ul>
          <li><a href="{{site.baseurl}}/">Blog</a></li>
          <li><a href="{{site.baseurl}}/about">About</a></li>
        </ul>
      </nav>
      <p class="logo"><a href="{{site.baseurl}}/">{{ site.author }}</a></p>
      <div class="search-icon-container">
        <span class="search-icon"><a><i class="fa fa-search" aria-hidden="true"></i></a></span>
      </div>
    </div>
  </div>
  <p>
  {% for link in site.links1 %}
	{% assign count = 0 %}
	{% if link.type == site.blog_0 %}
		{% for post in site.posts %}
			{% assign count = count | plus: 1 %}
		{% endfor %}
	{% endif %}

	{% if link.type == site.blog_1 %}
		{% for post in site.posts %}
			{% if post.profiles %}
				{% assign count = count | plus: 1 %}
			{% endif %}
		{% endfor %}
	{% endif %}

	{% if link.type == site.blog_2 %}
		{% for post in site.posts %}
			{% if post.EduBkg %}
				{% assign count = count | plus: 1 %}
			{% endif %}
		{% endfor %}
	{% endif %}

	{% if link.type == site.blog_3 %}
		{% for post in site.posts %}
			{% if post.ResBkg %}
				{% assign count = count | plus: 1 %}
			{% endif %}
		{% endfor %}
	{% endif %}

	{% if link.type == site.blog_4 %}
		{% for post in site.posts %}
			{% if post.MyLove %}
				{% assign count = count | plus: 1 %}
			{% endif %}
		{% endfor %}
	{% endif %}
{% endfor %}
  </p>
</header> <!-- End Header -->



	

	
