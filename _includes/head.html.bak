<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    
    <link rel='stylesheet' type='text/css' href='http://fonts.useso.com/css?family=Open+Sans:300,400,600,700,400italic'>
    <link rel="stylesheet" type="text/css" href="assets/css/bootstrap.min.css">
    <link rel="stylesheet" type="text/css" href="assets/font-awesome/css/font-awesome.min.css">    
    <link rel="stylesheet" type="text/css" href="assets/css/style.css">
    <title>{{ site.title }}</title>
	{% for link in site.links1 %}
		{% assign count = 0 %}
		{% if link.type == site.blog_0 %}
			{% for post in site.posts %}
				{% assign count = count | plus: 1 %}
			{% endfor %}
		{% endif %}

		{% if link.type == site.blog_1 %}
			{% for post in site.posts %}
				{% if post.profiles %}
					{% assign count = count | plus:1 %}
				{% endif %}
			{% endfor %}
		{% endif %}

		{% if link.type == site.blog_2 %}
			{% for post in site.posts %}
				{% if post.EduBkg %}
					{% assign count = count | plus:1 %}
				{% endif %}
			{% endfor %}
		{% endif %}

		{% if link.type == site.blog_3 %}
			{% for post in site.posts %}
				{% if post.ResBkg %}
					{% assign count = count | plus:1 %}
				{% endif %}
			{% endfor %}
		{% endif %}

		{% if link.type == site.blog_4 %}
			{% for post in site.posts %}
				{% if post.MyLove %}
					{% assign count = count | plus:1 %}
				{% endif %}
			{% endfor %}
		{% endif %}
</head>